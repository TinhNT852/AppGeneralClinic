<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/back01"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="Đăng ký"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_above="@+id/lt_register"
        android:layout_marginTop="80dp"/>
    <LinearLayout
        android:id="@+id/lt_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <EditText
            android:id="@+id/namereg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_radius"
            android:hint="Họ tên"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:drawableStart="@mipmap/user"
            android:textColorHint="#353434"
            android:drawablePadding="15dp"
            android:singleLine="true"/>
        <EditText
            android:id="@+id/emailreg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_radius"
            android:drawableLeft="@mipmap/email"
            android:hint="Email"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textColorHint="#353434"
            android:drawablePadding="15dp"
            android:singleLine="true"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/passwordreg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/password"
                android:background="@drawable/bg_radius"
                android:hint="Mật khẩu"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textColorHint="#353434"
                android:drawablePadding="15dp"
                android:singleLine="true"
                android:password="true"/>
            <ImageButton
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:id="@+id/showPasswordButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/show_pwd"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/loginNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Đã có tài khoản"
                android:layout_gravity="center"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/bg_radius"
                android:padding="10dp"
                android:text="Tạo tài khoản"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:elevation="10dp"
        android:visibility="gone"/>
</RelativeLayout>